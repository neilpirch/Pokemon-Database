@model PokemonIndex.Models.Gymformation
@{
    ViewBag.Title = "Index";
}

<h2>Gym Lookup</h2>
<p>Use this search tool to find gyms you want to know more about.</p>

<form asp-controller="Gym" asp-action="Index">
    <p>
        Pokemon Name: <input type="text" name="id">
        <input type="submit" value="Filter" />
    </p>
</form>

<h1>@Model.Gym.GymLocation</h1>
@foreach (var trainer in Model.Trainers)
{
    <h3>@trainer.TrainerName</h3>

    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Level
            </th>
            <th>
                Types
            </th>
            <th>
                Evolution
            </th>
        </tr>

        @foreach (var pokemon in trainer.Pokemon)
        {
            <tr>
                <td>
                    @pokemon.Id
                </td>
                <td>
                    @pokemon.Name
                </td>
                <td>
                    @pokemon.Description
                </td>
                <td>
                    @pokemon.Level
                </td>
                <td>
                    |
                    @foreach (var type in pokemon.Types)
                    {
                        @(type + " | ")

                    }
                </td>
                <td>
                    @pokemon.Evolution
                </td>
            </tr>
        }

    </table>
}

